{% extends 'base.html.twig' %}

{% block title %}Gerichttabelle{% endblock %}

{% block body %}

{% for messange in app.flashes('erfolg')%}
    <div class="alert alert-success">
        <h3>{{ messange }}</h3>
    </div>
{% endfor %}
<br>
<div class="container">
    <h2>Gerichte bearbeiten</h2>
    <br>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Bestellnummer</td>
                <td>Name</td>
                <td>Bezeichnung</td>
                <td>Kathegorie</td>
                <td>Preis</td>
                <td>LÃ¶schen</td>
                <td><a href="{{ path('meal.create') }}">Anlegen</a></td>
            </tr>
        </thead>
        <tbody>
            {% for meal in meals %}
                <tr>
                    <td>{{ meal.id }}</td>
                    <td><a href="{{ path('meal.show', {id: meal.id}) }}">{{ meal.name }}</td>
